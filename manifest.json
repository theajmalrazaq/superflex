{
  "manifest_version": 3,
  "name": "SuperFlex",
  "version": "4.0.0",
  "description": "A modern UI overlay and AI academic assistant for the Flex Student Portal.",
  "icons": {
    "16": "assets/favicon.png",
    "32": "assets/favicon.png",
    "48": "assets/favicon.png",
    "128": "assets/favicon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://flexstudent.nu.edu.pk/*"],
      "js": ["src/content.jsx"]
    }
  ],
  "host_permissions": [
    "https://flexstudent.nu.edu.pk/*",
    "https://*.puter.site/*",
    "https://api-gateway.umami.dev/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/favicon.png",
        "assets/favicon.svg",
        "assets/logo.svg",
        "assets/logo_sec.svg",
        "reviews.json",
        "scripts/umami.js",
        "scripts/puter.js",
        "scripts/polyfill.js",
        "scripts/rustls.js",
        "scripts/bridge.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
