{
  "manifest_version": 3,
  "name": "SuperFlex",
  "version": "1.0.0",
  "description": "Custom styled extension",
  "icons": {
    "16": "assets/favicon.png",
    "32": "assets/favicon.png",
    "48": "assets/favicon.png",
    "128": "assets/favicon.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://flexstudent.nu.edu.pk/*"],
      "js": ["src/content.jsx"]
    }
  ],
  "host_permissions": [
    "https://flexstudent.nu.edu.pk/*",
    "https://js.puter.com/*",
    "https://*.puter.site/*",
    "https://puter-net.b-cdn.net/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/bg.png",
        "assets/favicon.png",
        "assets/favicon.svg",
        "assets/logo.svg",
        "assets/logo_sec.svg",
        "assets/overlay.png",
        "reviews.json",
        "scripts/umami.js",
        "scripts/puter.js",
        "scripts/polyfill.js",
        "scripts/rustls.js",
        "scripts/bridge.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
