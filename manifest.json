{
  "manifest_version": 3,
  "name": "SuperFlex",
  "version": "1.0.0",
  "description": "Custom styled extension",
  "icons": {
    "16": "favicon.png",
    "32": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://flexstudent.nu.edu.pk/*"],
      "js": ["public/puter.js", "src/content.jsx"]
    }
  ],
  "host_permissions": [
    "https://flexstudent.nu.edu.pk/*",
    "https://js.puter.com/*",
    "https://*.puter.site/*",
    "https://puter-net.b-cdn.net/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "bg.png",
        "favicon.png",
        "favicon.svg",
        "logo.svg",
        "logo_sec.svg",
        "overlay.png",
        "reviews.json",
        "umami.js",
        "puter.js",
        "polyfill.js",
        "rustls.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
